configuration {
  modi: "drun,run,window,emoji";
  font: "JetBrains Mono";
  show-icons: true;
  display-drun: " :";
  display-run: " :";
  display-window: " :";
  drun-display-format: "{name}";
}

@theme "/dev/null"

* {
  bg: #1a1b26;
  bg-alt: #292e42;

  fg: #c0caf5;
  fg-alt: #a9b1d6;

  bl: #7aa2f7;

  background-color: @bg;

  border: 0;
  margin: 0;
  padding: 0;
  spacing: 0;
}

window {
  border-radius: 10;
  padding: 5;
  border: 1px;
  border-color: @bl; 
}

mainbox {
  border-radius: 10;
  spacing: 10;
  padding: 5;
  background-color: @bg;
  children: [inputbar, listview];
}

inputbar {
  children: [prompt, entry];
  border-radius: 10;
}

entry {
  background-color: @bg-alt;
  padding: 6;
  text-color: @fg;
}

prompt {
  background-color: @bg-alt;
  color: @bl;
  padding: 6 0 0 6;
}

listview {
  background-color: @bg;
  columns: 2; 
  lines: 7;
}

element {
  margin: 5;
  padding: 10 6;
  border-radius: 10;
  spacing: 5;
  text-color: @fg-alt;
  background-color: @bg-alt;
}

element selected {
  text-color: @bg; 
  background-color: @bl;
}

element-text {
  background-color: inherit;
  text-color: inherit;
}

element-icon {
  size: 25;
  background-color: transparent;
}
